---
import Layout from '../layouts/Layout.astro';
import AuthSection from '../components/AuthSection.astro';
---

<Layout>
  <AuthSection />
</Layout>

<script>
  // Initialize app state on page load
  import { authService } from '../lib/authService';

  // Check authentication status and redirect if authenticated
  if (typeof window !== 'undefined') {
    const isAuthed = authService.isAuthenticated();
    if (isAuthed) {
      // Usar replace() para no agregar entrada al historial
      window.location.replace('/ciara/users');
    }
  }
</script>

